# =============================================================================
# .env.example  —  copy to .env for local development, then fill in values.
# Never commit .env to git.
# =============================================================================

# ── Database ──────────────────────────────────────────────────────────────────
# For local development leave this as SQLite (no setup required):
DATABASE_URL=sqlite:///data/articles.db

# For production (Supabase Postgres), replace with your connection string:
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# ── API keys (all optional) ───────────────────────────────────────────────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
NEWS_API_KEY=

# ── Pipeline behaviour ────────────────────────────────────────────────────────
SOURCES_YAML=config/sources.yaml
FETCH_FULLTEXT=true
FETCH_DELAY_SECONDS=1.0
FETCH_LIMIT_PER_FEED=
PROCESS_BATCH_LIMIT=500
MAX_ARTICLES_PER_RUN=200
LOOKBACK_HOURS=48

# ── Feature flags ─────────────────────────────────────────────────────────────
ENABLE_LLM_SUMMARIES=false
ENABLE_SPACY_NER=true

# ── App settings (local only — Streamlit Cloud ignores these) ─────────────────
TIMEZONE=America/New_York
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8501
