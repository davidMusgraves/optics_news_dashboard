# =========================
# API KEYS (leave blank in template)
# =========================

# LLM providers (optional, depending on your summarization/classification workflow)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# News / feed providers (optional)
NEWS_API_KEY=

# =========================
# DATABASE
# =========================

# SQLite path (relative to project root)
DB_PATH=data/db/optics_news.db

# =========================
# APP SETTINGS
# =========================

TIMEZONE=America/New_York
LOG_LEVEL=INFO

# Streamlit / app options
APP_HOST=127.0.0.1
APP_PORT=8501

# =========================
# INGEST SETTINGS
# =========================

# How many articles to process in one run (optional throttle)
MAX_ARTICLES_PER_RUN=200

# Default lookback window in hours for scoring/digest (optional)
LOOKBACK_HOURS=48

# =========================
# FEATURE FLAGS
# =========================

# Turn LLM summarization on/off
ENABLE_LLM_SUMMARIES=false

# Turn spaCy NER on/off
ENABLE_SPACY_NER=true
